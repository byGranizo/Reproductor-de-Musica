<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reproductor">

    <Button
        android:id="@+id/btVolumenMenos"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/menos"
        app:layout_constraintStart_toEndOf="@+id/btMenu"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btVolumenMas"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mas"
        app:layout_constraintStart_toEndOf="@+id/btVolumenMenos"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/lista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:background="@android:drawable/btn_star_big_on"
        android:onClick="playPause"
        app:layout_constraintEnd_toStartOf="@+id/btAdelante"
        app:layout_constraintStart_toEndOf="@+id/btAtras"
        app:layout_constraintTop_toBottomOf="@+id/ivCaratula" />

    <ImageView
        android:id="@+id/ivCaratula"
        android:layout_width="wrap_content"
        android:layout_height="382dp"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_caratula" />

    <Button
        android:id="@+id/btAtras"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/espalda"
        android:onClick="prevSong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCaratula" />

    <Button
        android:id="@+id/btAdelante"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/proximo"
        android:onClick="nextSong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCaratula" />

    <SeekBar
        android:id="@+id/sbCancion"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>